<div class="alert">
  <% flash.each do |name, msg| %>
  <%= content_tag :div, msg, class: "alert alert-info" %>
  <% end %>
</div>

<div class="container">
  <p>
    <%= link_to @story.title, @story.url, target: '_blank' %>
    <small>Submitted <%= time_ago_in_words(@story.created_at) %> ago</small>
  </p>

  <%= form_for [@story, Comment.new] do |f| %>
    <div class="form-group">
      <%= f.text_area :body, placeholder: 'Add a comment', class: 'form-control' %>
    </div>

    <%= f.submit 'Add comment', class: 'btn btn-primary form-control' %>
  <% end %>

  <h3>Comments</h3>

  <ul>
    <%= render partial: 'comments/comment', collection: @story.comments %>
  </ul>
</div>
